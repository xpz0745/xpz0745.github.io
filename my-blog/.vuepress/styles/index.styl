.navbar .site-name {
	color: #FF34B3 !important;
}

.home-blog {
	.hero {
		background-size: cover !important;
		background-position: center 0 !important;
		.description {
			display: none;
		}
		:first-child h1 {
			color: #FF34B3;
			font-family: Helvetica, "Hiragino Sans GB", "Microsoft Yahei", "微软雅黑", Arial, sans-serif;
		}
		.home-more {
			display: block;
			margin: 0 auto;
			position: relative;
		}
		#homeBlog {
			left: 0;
			bottom: 3.6rem;
			width: 100%;
			position: absolute;
		}
	}
	.home-blog-wrapper {
		.info-wrapper .category-wrapper .category-item {
			box-shadow: none !important;
		}
	}
}
		
.hero::before {
	content: "";
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.5);
}

.hero a::after {
	content: "";
	position: absolute;
	display: block;
	left: calc(50% - 0.5rem);
	width: 1rem;
	height: 1rem;
	border: 0.25rem solid #fff;
	border-bottom-right-radius: 0.15rem;
	border-top: none;
	border-left: none;
	transform-origin: 50% 50%;
	transform: rotate(45deg);
	cursor pointer;
	-webkit-animation: arrowMove-data 3s infinite;
	animation: arrowMove-data 3s infinite;
}

@keyframes arrowMove-data {
	0% {
		transform: translateY(0px) rotate(45deg);
	}
	50% {
		transform: translateY(40px) rotate(45deg);
		border: 0.25rem solid rgba(255, 52, 179, 0.6);
		border-bottom-right-radius: 0.15rem;
		border-top: none;
		border-left: none;
	}
	100% {
		transform: translateY(0px) rotate(45deg);
	}
}